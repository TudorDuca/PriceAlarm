<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Solana Price Alarms</title>
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#0a0a0a">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="mobile-web-app-capable" content="yes">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            color: #e0e0e0;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: auto;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        h1 {
            font-size: 3em;
            background: linear-gradient(45deg, #00d4ff, #9945ff, #14f195);
            background-size: 200% 200%;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientShift 3s ease infinite;
            text-shadow: 0 0 30px rgba(153, 69, 255, 0.5);
        }
        
        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        .subtitle {
            color: #888;
            font-size: 1.2em;
            margin-top: 10px;
        }
        
        .alarms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .alarm-card {
            background: rgba(255, 255, 255, 0.08);
            border-radius: 15px;
            padding: 25px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .alarm-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(153, 69, 255, 0.2);
            border-color: rgba(153, 69, 255, 0.5);
        }
        
        .alarm-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(45deg, #00d4ff, #9945ff, #14f195);
            background-size: 200% 200%;
            animation: gradientShift 3s ease infinite;
        }
        
        .token-address {
            font-family: 'Courier New', monospace;
            color: #00d4ff;
            font-size: 0.9em;
            margin-bottom: 10px;
            word-break: break-all;
        }
        
        .trigger-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 15px 0;
        }
        
        .trigger-type {
            background: rgba(153, 69, 255, 0.2);
            color: #9945ff;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
        }
        
        .trigger-value {
            color: #14f195;
            font-weight: bold;
            font-size: 1.1em;
        }
        
        .sound-type {
            color: #888;
            font-size: 0.9em;
            margin-bottom: 15px;
        }
        
        .actions {
            display: flex;
            gap: 10px;
        }
        
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9em;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }
        
        .btn-edit {
            background: rgba(20, 241, 149, 0.2);
            color: #14f195;
            border: 1px solid rgba(20, 241, 149, 0.3);
        }
        
        .btn-edit:hover {
            background: rgba(20, 241, 149, 0.3);
            box-shadow: 0 5px 15px rgba(20, 241, 149, 0.2);
        }
        
        .btn-delete {
            background: rgba(255, 69, 69, 0.2);
            color: #ff4545;
            border: 1px solid rgba(255, 69, 69, 0.3);
        }
        
        .btn-delete:hover {
            background: rgba(255, 69, 69, 0.3);
            box-shadow: 0 5px 15px rgba(255, 69, 69, 0.2);
        }
        
        .add-form {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 20px;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .form-title {
            font-size: 1.8em;
            margin-bottom: 25px;
            color: #fff;
            text-align: center;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            color: #ccc;
            margin-bottom: 8px;
            font-weight: 500;
        }
        
        input[type="text"], input[type="number"], select {
            width: 100%;
            padding: 15px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            color: #fff;
            font-size: 1em;
            transition: all 0.3s ease;
        }
        
        input[type="text"]:focus, input[type="number"]:focus, select:focus {
            outline: none;
            border-color: #9945ff;
            box-shadow: 0 0 20px rgba(153, 69, 255, 0.3);
            background: rgba(255, 255, 255, 0.15);
        }
        
        .radio-group {
            display: flex;
            gap: 20px;
            margin-top: 10px;
        }
        
        .radio-option {
            display: flex;
            align-items: center;
            cursor: pointer;
            padding: 10px 15px;
            border-radius: 10px;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .radio-option:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        
        .radio-option input[type="radio"] {
            margin-right: 8px;
            accent-color: #9945ff;
        }
        
        .submit-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, #9945ff, #14f195);
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }
        
        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(153, 69, 255, 0.3);
        }
        
        .custom-sound-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 10px;
            border-radius: 8px;
            margin: 5px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .sound-preview-btn {
            background: rgba(20, 241, 149, 0.2);
            border: 1px solid rgba(20, 241, 149, 0.3);
            color: #14f195;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.8em;
        }
        
        /* Mobile-specific optimizations */
        @media (max-width: 768px) {
            body {
                padding: 10px;
                user-select: none;
                -webkit-user-select: none;
                -webkit-touch-callout: none;
                -webkit-tap-highlight-color: transparent;
            }
            
            .container {
                padding: 15px;
                margin: 5px;
                border-radius: 15px;
            }
            
            h1 {
                font-size: 1.8em;
            }
            
            .alarms-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }
            
            .alarm-card {
                padding: 20px;
            }
            
            .radio-group {
                flex-direction: column;
                gap: 10px;
            }
            
            .radio-option {
                padding: 15px;
                font-size: 1.1em;
            }
            
            input[type="text"], input[type="number"], select {
                padding: 18px;
                font-size: 16px; /* Prevents zoom on iOS */
                border-radius: 12px;
            }
            
            .submit-btn {
                padding: 18px;
                font-size: 1.2em;
                border-radius: 12px;
            }
            
            .btn {
                padding: 12px 16px;
                font-size: 1em;
            }
            
            /* Prevent text selection on mobile */
            .alarm-card, .form-group, .radio-option {
                user-select: none;
                -webkit-user-select: none;
            }
            
            /* Improve touch targets */
            .actions {
                gap: 15px;
            }
        }
        
        /* PWA specific styles */
        @media (display-mode: standalone) {
            body {
                padding-top: env(safe-area-inset-top);
                padding-bottom: env(safe-area-inset-bottom);
            }
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }
        
        .empty-state h3 {
            font-size: 1.5em;
            margin-bottom: 10px;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 20px;
                margin: 10px;
            }
            
            h1 {
                font-size: 2em;
            }
            
            .alarms-grid {
                grid-template-columns: 1fr;
            }
            
            .radio-group {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸš€ Solana Price Alarms</h1>
            <p class="subtitle">Advanced price monitoring for Solana tokens</p>
        </div>

        <div class="alarms-section">
            <% if (alarms.length === 0) { %>
                <div class="empty-state">
                    <h3>No alarms configured</h3>
                    <p>Add your first Solana token alarm below</p>
                </div>
            <% } else { %>
                <div class="alarms-grid">
                    <% alarms.forEach(alarm => { %>
                        <div class="alarm-card">
                            <div class="token-address">
                                <%= alarm.tokenAddress %>
                            </div>
                            <div class="trigger-info">
                                <span class="trigger-type">
                                    <%= alarm.triggerType === 'price' ? 'PRICE' : 'MARKET CAP' %>
                                </span>
                                <span class="trigger-value">
                                    <% if (alarm.triggerType === 'price') { %>
                                        $<%= alarm.price.toLocaleString() %>
                                    <% } else { %>
                                        $<%= alarm.marketCap.toLocaleString() %>
                                    <% } %>
                                </span>
                            </div>
                            <div class="sound-type">
                                <% if (alarm.sound === 'alarm-beep.mp3') { %>
                                    ðŸš¨ Classic Alarm
                                <% } else if (alarm.sound.startsWith('data:audio/wav')) { %>
                                    ðŸ”Š Built-in Sound
                                <% } else { %>
                                    ðŸŽµ Custom Sound
                                <% } %>
                            </div>
                            <div class="actions">
                                <a href="/edit/<%= alarm.id %>" class="btn btn-edit">Edit</a>
                                <a href="/delete/<%= alarm.id %>" class="btn btn-delete" onclick="return confirm('Are you sure?')">Delete</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>

        <div class="add-form">
            <h2 class="form-title">Add New Alarm</h2>
            <form action="/add" method="POST">
                <div class="form-group">
                    <label for="tokenAddress">Solana Token Address</label>
                    <input type="text" id="tokenAddress" name="tokenAddress" placeholder="e.g., So11111111111111111111111111111111111111112" required>
                </div>

                <div class="form-group">
                    <label>Trigger Type</label>
                    <div class="radio-group">
                        <div class="radio-option">
                            <input type="radio" name="triggerType" value="price" checked onchange="toggleTriggerInput()">
                            <span>Price Target</span>
                        </div>
                        <div class="radio-option">
                            <input type="radio" name="triggerType" value="marketCap" onchange="toggleTriggerInput()">
                            <span>Market Cap Target</span>
                        </div>
                    </div>
                </div>

                <div class="form-group" id="price-input">
                    <label for="price">Target Price (USD)</label>
                    <input type="number" id="price" name="price" step="any" placeholder="e.g., 150.50">
                </div>

                <div class="form-group" id="marketcap-input" style="display: none;">
                    <label for="marketCap">Target Market Cap (USD)</label>
                    <input type="number" id="marketCap" name="marketCap" step="any" placeholder="e.g., 1000000000">
                </div>

                <div class="form-group">
                    <label for="sound">Alarm Sound</label>
                    <select id="sound" name="sound">
                        <option value="beep">ðŸ”” Classic Beep</option>
                        <option value="alarm-beep.mp3">ðŸš¨ Classic Alarm</option>
                        <option value="data:audio/wav;base64,">ðŸ“¢ Siren</option>
                        <option value="data:audio/wav;base64,">ðŸ”” Bell</option>
                        <option value="data:audio/wav;base64,">ðŸ“¯ Horn</option>
                    </select>
                </div>

                <button type="submit" class="submit-btn">Create Alarm</button>
            </form>
        </div>
    </div>

    <script>
        let customSounds = [];
        
        function toggleTriggerInput() {
            const triggerType = document.querySelector('input[name="triggerType"]:checked').value;
            const priceInput = document.getElementById('price-input');
            const marketCapInput = document.getElementById('marketcap-input');
            const priceField = document.getElementById('price');
            const marketCapField = document.getElementById('marketCap');

            if (triggerType === 'price') {
                priceInput.style.display = 'block';
                marketCapInput.style.display = 'none';
                priceField.required = true;
                marketCapField.required = false;
                marketCapField.value = ''; // Clear the hidden field
            } else {
                priceInput.style.display = 'none';
                marketCapInput.style.display = 'block';
                priceField.required = false;
                marketCapField.required = true;
                priceField.value = ''; // Clear the hidden field
            }
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            toggleTriggerInput();
        });
        
        // PWA and mobile enhancements
        let deferredPrompt;
        
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            
            // Show install button
            const installBtn = document.createElement('button');
            installBtn.textContent = 'ðŸ“± Install App';
            installBtn.className = 'submit-btn';
            installBtn.style.marginTop = '20px';
            installBtn.onclick = async () => {
                if (deferredPrompt) {
                    deferredPrompt.prompt();
                    const result = await deferredPrompt.userChoice;
                    deferredPrompt = null;
                    if (result.outcome === 'accepted') {
                        installBtn.style.display = 'none';
                    }
                }
            };
            document.querySelector('.add-form').appendChild(installBtn);
        });
        
        // Register service worker for PWA functionality
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js')
                .then(registration => {
                    console.log('SW registered');
                    
                    // Request persistent notification permission
                    if ('Notification' in window && Notification.permission === 'default') {
                        Notification.requestPermission().then(permission => {
                            if (permission === 'granted') {
                                console.log('Notifications enabled');
                            }
                        });
                    }
                })
                .catch(error => console.log('SW registration failed'));
        }
        
        // Wake lock for keeping screen active (experimental)
        let wakeLock = null;
        
        async function requestWakeLock() {
            try {
                if ('wakeLock' in navigator) {
                    wakeLock = await navigator.wakeLock.request('screen');
                    console.log('Screen wake lock active');
                }
            } catch (err) {
                console.log('Wake lock failed:', err);
            }
        }
        
        // Request wake lock when page is visible
        document.addEventListener('visibilitychange', () => {
            if (!document.hidden && wakeLock === null) {
                requestWakeLock();
            }
        });
        
        // Mobile-specific optimizations
        if (/Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            document.body.classList.add('mobile-device');
            
            // Prevent zoom on input focus
            const viewportMeta = document.querySelector('meta[name="viewport"]');
            viewportMeta.content = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no';
            
            // Auto-request wake lock on mobile
            requestWakeLock();
        }
    </script>
</body>
</html>
