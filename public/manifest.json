{
  "name": "Solana Price Alarms",
  "short_name": "SolAlarms",
  "description": "Advanced price monitoring for Solana tokens with custom alarm sounds",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0a0a0a",
  "theme_color": "#9945ff",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["finance", "utilities", "productivity"],
  "lang": "en",
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Add Alarm",
      "short_name": "Add",
      "description": "Add a new price alarm",
      "url": "/#add-alarm",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "permissions": [
    "notifications",
    "background-sync",
    "wake-lock"
  ],
  "protocol_handlers": [
    {
      "protocol": "solana",
      "url": "/?token=%s"
    }
  ]
}
